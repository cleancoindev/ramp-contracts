{
  "name": "ramps",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Ramps allow lend and pay to be made with any ERC-20 token while the Diaspore contract receiving RCN their token using pooled liquidity.",
  "files": [
    "build",
    "contracts",
    "test",
    "!contracts/mocks"
  ],
  "scripts": {
    "lint:js": "node_modules/.bin/eslint .",
    "lint:js:fix": "node_modules/.bin/eslint . --fix",
    "lint:sol": "node_modules/.bin/solhint \"**/*.sol\"",
    "lint:sol:fix": "node_modules/.bin/solhint \"**/*.sol\" --fix",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:fix": "npm run lint:js:fix && npm run lint:sol:fix",
    "console": "node_modules/.bin/truffle console",
    "coverage": "bin/coverage.sh",
    "compile:sol": "node_modules/.bin/truffle compile"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ripio/rcn-network"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "smart",
    "contracts"
  ],
  "author": "jpgonzalezra",
  "bugs": {
    "url": "https://github.com/ripio/ramps-diaspore"
  },
  "homepage": "https://ripiocredit.network",
  "dependencies": {
    "web3": "1.2.0",
    "openzeppelin-solidity": "2.3.0"
  },
  "devDependencies": {
    "bn-chai": "^1.0.1",
    "chai": "^4.2.0",
    "coveralls": "^3.0.1",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-mocha-no-only": "^1.1.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "ethjs-abi": "^0.2.1",
    "ganache-cli": "^6.4.3",
    "solhint": "2.1.0",
    "solidity-coverage": "^0.7.10",
    "truffle": "^5.0.3"
  }
}
